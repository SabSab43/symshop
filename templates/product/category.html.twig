{% extends "base.html.twig" %}

{% block title %} Catégories - {{ category.name }}{% endblock %}

{% block body %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path("homepage") }}">Accueil</a></li>
        <li class="breadcrumb-item active">{{ category.name }}</li>
    </ol>
    <h1>Catégorie: {{ category.name }}</h1>
    <div class="row">
        {% set i = 1 %}
        {% for p in category.products %}

            {% if i == 1 %}
                <div class="row mb-5">
            {% endif %}

            <div class="col-3">
                {% include "/product/_product_card.html.twig" with {"height": "250px"} %}
            </div>

            {% set i = i + 1 %}

            {% if i == 5 %}
                {% set i = 1 %}
                </div>
            {% endif %}

        {% endfor %}
    </div>
{% endblock %}