{% extends "base.html.twig" %}

{% block title %}Boutique{% endblock %}

{% block body %}
    <h1>Liste de tous nos produits</h1>
    {% set i = 1 %}
    {% for product in products %}

        {% if i == 1 %}
            <div class="row mb-5">
        {% endif %}

        <div class="col-3">
            {% include "/product/_product_card.html.twig" with {"p": product, "height": "250px"} %}
        </div>

        {% set i = i + 1 %}

        {% if i == 5 %}
            {% set i = 1 %}
            </div>
        {% endif %}

    {% endfor %}
{% endblock %}