{% extends "admin/base.html.twig" %}

{% block title %}Liste des catégories{% endblock %}

{% block body %}
    <h1>Liste des catégories</h1>
    <table class="table table-hover">
        <thead class="table-dark">
            <th scope="col">Nom</th>
            <th>Supprimer</th>
            <th>Éditer</th>
        </thead>
        <tbody>
            {% for c in categorys %}
            <tr>
                <td>{{ c.name }}</td>
                <td><a href="{{ path("admin_category_remove", {"id": c.id}) }}"><button class="btn btn-danger"><i class="fas fa-trash"></i></button></a></td>
                <td><a href="{{ path("admin_category_edit", {"id": c.id}) }}"><button class="btn btn-primary"><i class="fas fa-edit"></i></button></a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}